<!DOCTYPE html>
<html lang="en">

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>pinokio</title>
<!-- Fonts: Manrope -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&display=swap" rel="stylesheet">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

<!-- Global Styles -->
<link rel="stylesheet" href="/style.css">

<style>
    :root {
        /* Design Tokens */
        --bg-body: var(--surface-1, #ffffff);
        --fg-body: var(--text-primary, #111827);
        --fg-muted: var(--text-muted, #6b7280);
        --border: var(--border-default, #e5e7eb);
        --card-bg: #ffffff;
        --accent: var(--color-blue-500, #3b82f6);
        --radius-md: 12px;
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    body.dark {
        --bg-body: var(--color-gray-900, #111827);
        --fg-body: var(--text-primary, #f3f4f6);
        --fg-muted: var(--text-muted, #9ca3b8);
        --border: var(--border-default, #374151);
        --card-bg: var(--color-gray-800, #1f2937);
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Manrope', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        background: var(--bg-body);
        color: var(--fg-body);
        -webkit-font-smoothing: antialiased;
    }

    .container {
        max-width: 100%;
        margin: 0 auto;
        padding: 20px;
    }

    /* Search Input */
    .input {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid var(--border);
        border-radius: var(--radius-md);
        margin-bottom: 24px;
        font-size: 16px;
        font-family: inherit;
        background: var(--card-bg);
        color: var(--fg-body);
        transition: border-color 0.2s;
        box-sizing: border-box;
    }

    .input:focus {
        outline: none;
        border-color: var(--accent);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    /* Badges */
    .badge {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 4px 8px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.02em;
        margin-bottom: 8px;
    }

    .badge-verified {
        background: rgba(59, 130, 246, 0.1);
        color: var(--accent);
    }

    .badge-community {
        background: rgba(107, 114, 128, 0.1);
        color: var(--fg-muted);
    }

    body.dark .badge-verified {
        background: rgba(59, 130, 246, 0.2);
    }

    body.dark .badge-community {
        background: rgba(156, 163, 184, 0.15);
    }

    /* Grid & Cards */
    .minimal_items {
        display: grid;
        gap: 16px;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    }

    a.card {
        text-decoration: none;
        color: inherit;
        display: block;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    a.card:hover {
        transform: translateY(-2px);
    }

    /* Card Layout Fixes (UX-15) */
    .item {
        display: flex;
        align-items: flex-start;
        padding: 16px;
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: var(--radius-md);
        gap: 16px;
        /* height: 140px;  <-- REMOVED fixed height */
        min-height: 180px;
        /* Ensure enough space */
        height: 100%;
        /* Stretch to fill grid cell (via a.card flex) */
        box-sizing: border-box;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
    }

    a.card {
        text-decoration: none;
        color: inherit;
        display: flex;
        /* Flex to stretch items */
        flex-direction: column;
        height: 100%;
        /* Fill grid row */
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    a.card:hover .item {
        border-color: var(--accent);
        box-shadow: var(--shadow-md);
    }

    .item img {
        border-radius: 8px;
        object-fit: cover;
        width: 80px;
        height: 80px;
        background: var(--bg-body);
        flex-shrink: 0;
        border: 1px solid var(--border);
    }

    .item .col {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        height: 100%;
    }

    .item .title {
        font-weight: 700;
        font-size: 16px;
        margin-bottom: 6px;
        color: var(--fg-body);
        /* white-space: nowrap; <-- REMOVED for wrapping */
        display: -webkit-box;
        -webkit-line-clamp: 2;
        /* Allow 2 lines */
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.3;
    }

    .item .description {
        font-size: 14px;
        color: var(--fg-muted);
        margin-top: 4px;
        margin-bottom: 0px;
        display: -webkit-box;
        -webkit-line-clamp: 6;
        /* INCREASED from 3 */
        line-clamp: 6;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.5;
    }

    .hidden {
        display: none !important;
    }

    /* Section Headers */
    .apps-header {
        font-size: 24px;
        font-weight: 800;
        margin: 0 0 20px 0;
        color: var(--fg-body);
        letter-spacing: -0.02em;
    }
</style>
</head>

<body>
    <div class="container">
        <main>
            <div class="grid">
                <!-- Removed Aside -->
                <div class='sections'>
                    <h2 class="apps-header"><i class="fas fa-desktop"></i> Apps</h2>
                    <div class="search-container">
                        <input type="search" id="searchInput" class="input"
                            placeholder="Search all scripts (verified & community)...">
                    </div>

                    <section id="unifiedSection" class="minimalItemsContainer">
                        <section class="minimal_items" id="allItems">
                            <!-- All items loaded here -->
                        </section>
                    </section>


                </div>
            </div>
        </main>
    </div>
    <script>
        // --- Mock Config ---
        const Config = {
            featured: "https://pinokiocomputer.github.io/sitefeed/featured.json",
        };

        var allItems = [];
        var currentSort = 'featured';

        // --- Styles for new elements ---
        const style = document.createElement('style');
        style.textContent = `
            .files-header {
                display: flex;
                align-items: center;
                gap: 10px;
                margin-bottom: 20px;
                flex-wrap: wrap;
            }
            .sort-controls {
                display: flex;
                gap: 10px;
                margin-left: auto;
            }
            .sort-btn {
                background: var(--card-bg);
                border: 1px solid var(--border);
                color: var(--fg-muted);
                padding: 6px 12px;
                border-radius: 20px;
                font-size: 13px;
                cursor: pointer;
                transition: all 0.2s;
                font-family: inherit;
                display: flex;
                align-items: center;
                gap: 6px;
            }
            .sort-btn:hover {
                border-color: var(--fg-muted);
                color: var(--fg-body);
            }
            .sort-btn.active {
                background: var(--accent);
                color: white;
                border-color: var(--accent);
            }
            .metric-badge {
                display: inline-flex;
                align-items: center;
                gap: 4px;
                font-size: 11px;
                color: var(--fg-muted);
                background: rgba(0,0,0,0.03);
                padding: 2px 6px;
                border-radius: 4px;
                margin-right: 6px;
            }
            body.dark .metric-badge {
                background: rgba(255,255,255,0.05);
            }
            .metrics-row {
                margin-bottom: 8px;
                display: flex;
                align-items: center;
            }
        `;
        document.head.appendChild(style);

        // --- Embedded JS Logic ---
        function setSort(sortType) {
            currentSort = sortType;

            // Update UI
            document.querySelectorAll('.sort-btn').forEach(btn => {
                btn.classList.toggle('active', btn.dataset.sort === sortType);
            });

            const container = document.getElementById("allItems");
            const searchValue = document.getElementById('searchInput').value.trim().toLowerCase();

            let items = [...allItems];

            // Apply Sort
            if (sortType === 'stars') {
                items.sort((a, b) => (b.stars || 0) - (a.stars || 0));
            } else if (sortType === 'updated') {
                items.sort((a, b) => new Date(b.updated_at || 0) - new Date(a.updated_at || 0));
            } else {
                // Featured/Default: Verified first, ensuring specific order if needed
                items.sort((a, b) => {
                    if (a.type === 'verified' && b.type !== 'verified') return -1;
                    if (a.type !== 'verified' && b.type === 'verified') return 1;
                    return 0;
                    // Secondary sort for featured could be added here
                });
            }

            // Apply Filter
            if (searchValue) {
                items = items.filter(item =>
                    item.title.toLowerCase().includes(searchValue) ||
                    item.description.toLowerCase().includes(searchValue)
                );
            }

            renderItems(items, container);
        }

        function searchItems() {
            setSort(currentSort); // Re-trigger render with current sort and new filtering
        }

        function formatNumber(num) {
            if (!num) return '0';
            if (num >= 1000) return (num / 1000).toFixed(1) + 'k';
            return num.toString();
        }

        function renderItems(items, container) {
            container.innerHTML = '';
            items.forEach(item => {
                const link = document.createElement('a');
                const theme = new URLSearchParams(window.location.search).get("theme");

                let href = `/item_native?uri=${encodeURIComponent(item.download)}`;
                if (theme) href += `&theme=${theme}`;

                link.href = href;
                link.className = 'card';

                const badgeClass = item.type === 'verified' ? 'badge-verified' : 'badge-community';
                const badgeIcon = item.type === 'verified' ? 'fa-check' : 'fa-shapes';
                const badgeLabel = item.type === 'verified' ? 'Verified' : 'Community';

                // Metrics HTML
                let metricsHtml = '';
                if (item.stars !== undefined || item.forks !== undefined) {
                    metricsHtml = `
                        <div class="metrics-row">
                            <span class="metric-badge" title="Stars"><i class="fas fa-star" style="font-size:10px;"></i> ${formatNumber(item.stars)}</span>
                            <span class="metric-badge" title="Forks"><i class="fas fa-code-branch" style="font-size:10px;"></i> ${formatNumber(item.forks)}</span>
                        </div>
                    `;
                }

                link.innerHTML = `
                <div class="item">
                    <div class="col">
                        <div style="display:flex; justify-content:space-between; width:100%;">
                            <div class="badge ${badgeClass}"><i class="fas ${badgeIcon}"></i> ${badgeLabel}</div>
                        </div>
                        ${metricsHtml}
                        <div class="title">${item.title}</div>
                        <div class="description">${item.description}</div>
                    </div>
                    ${item.image ? `<img src="${item.image}" width="80" height="80" alt="${item.title}">` : ''}
                </div>
            `;
                container.appendChild(link);
            });
        }

        async function fetchData() {
            try {
                // Add sort controls to Header
                const sectionsDiv = document.querySelector('.sections');
                const searchInput = document.getElementById('searchInput');
                const header = document.querySelector('.apps-header');

                // insert controls row
                const controlsRow = document.createElement('div');
                controlsRow.className = 'files-header';
                controlsRow.innerHTML = `
                    <div style="font-weight:600; font-size:14px; color:var(--fg-muted);">Sort by:</div>
                    <button class="sort-btn active" data-sort="featured" onclick="setSort('featured')"><i class="fas fa-certificate"></i> Featured</button>
                    <button class="sort-btn" data-sort="stars" onclick="setSort('stars')"><i class="fas fa-star"></i> Popular</button>
                    <button class="sort-btn" data-sort="updated" onclick="setSort('updated')"><i class="fas fa-clock"></i> Newest</button>
                `;

                // Insert after header, before search
                sectionsDiv.insertBefore(controlsRow, searchInput.parentElement);

                const [featuredRes, latestRes] = await Promise.all([
                    fetch(Config.featured).then(res => res.json()).catch(() => []),
                    fetch("https://api.github.com/search/repositories?q=topic:pinokio&sort=updated&direction=desc&per_page=100").then(res => res.json()).catch(() => ({ items: [] }))
                ]);

                // Map Featured (Usually manually curated, so might not have realtime stats unless we fetch specifically, 
                // but let's assume for now they are just "verified". We could fetch stats for them too if needed later.)
                const featured = featuredRes.map(item => ({ ...item, type: 'verified', stars: 0, forks: 0, updated_at: new Date().toISOString() })); // Default values

                // Map Community with stats
                const latest = latestRes.items.map(item => ({
                    title: item.name,
                    description: item.description || "",
                    image: item.owner.avatar_url,
                    download: item.html_url,
                    type: 'community',
                    stars: item.stargazers_count,
                    forks: item.forks_count,
                    updated_at: item.updated_at
                }));

                // Combine
                allItems = [...featured, ...latest];

                // Initial Sort (Default)
                setSort('featured');

            } catch (e) {
                console.error(e);
            }
        }

        document.addEventListener("DOMContentLoaded", () => {
            const theme = new URLSearchParams(window.location.search).get("theme");
            if (theme) document.body.classList.add(theme);

            fetchData();
            document.getElementById('searchInput').addEventListener('input', searchItems);
        });
    </script>
</body>

</html>