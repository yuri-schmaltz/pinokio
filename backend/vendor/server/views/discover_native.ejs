<!DOCTYPE html>
<html lang="en">

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>pinokio</title>
<!-- Fonts: Manrope -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&display=swap" rel="stylesheet">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

<!-- Global Styles -->
<link rel="stylesheet" href="/style.css">

<style>
    :root {
        /* Design Tokens */
        --bg-body: var(--surface-1, #ffffff);
        --fg-body: var(--text-primary, #111827);
        --fg-muted: var(--text-muted, #6b7280);
        --border: var(--border-default, #e5e7eb);
        --card-bg: #ffffff;
        --accent: var(--color-blue-500, #3b82f6);
        --radius-md: 12px;
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    body.dark {
        --bg-body: var(--color-gray-900, #111827);
        --fg-body: var(--text-primary, #f3f4f6);
        --fg-muted: var(--text-muted, #9ca3b8);
        --border: var(--border-default, #374151);
        --card-bg: var(--color-gray-800, #1f2937);
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Manrope', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        background: var(--bg-body);
        color: var(--fg-body);
        -webkit-font-smoothing: antialiased;
    }

    .container {
        max-width: 100%;
        margin: 0 auto;
        padding: 20px;
    }

    /* Search Input */
    .input {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid var(--border);
        border-radius: var(--radius-md);
        margin-bottom: 24px;
        font-size: 16px;
        font-family: inherit;
        background: var(--card-bg);
        color: var(--fg-body);
        transition: border-color 0.2s;
        box-sizing: border-box;
    }

    .input:focus {
        outline: none;
        border-color: var(--accent);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    /* Tabs */
    .tab {
        display: flex;
        gap: 20px;
        margin-bottom: 24px;
        border-bottom: 1px solid var(--border);
    }

    .tab button {
        background: none;
        border: none;
        padding: 12px 4px;
        font-size: 16px;
        font-weight: 500;
        font-family: inherit;
        cursor: pointer;
        border-bottom: 2px solid transparent;
        color: var(--fg-muted);
        transition: all 0.2s;
    }

    .tab button:hover {
        color: var(--fg-body);
    }

    .tab button.selected {
        border-bottom-color: var(--accent);
        color: var(--accent);
        font-weight: 700;
    }

    /* Grid & Cards */
    .minimal_items {
        display: grid;
        gap: 16px;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    }

    a.card {
        text-decoration: none;
        color: inherit;
        display: block;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    a.card:hover {
        transform: translateY(-2px);
    }

    .item {
        display: flex;
        align-items: flex-start;
        padding: 16px;
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: var(--radius-md);
        gap: 16px;
        height: 140px;
        box-sizing: border-box;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
    }

    a.card:hover .item {
        border-color: var(--accent);
        box-shadow: var(--shadow-md);
    }

    .item img {
        border-radius: 8px;
        object-fit: cover;
        width: 80px;
        height: 80px;
        background: var(--bg-body);
        flex-shrink: 0;
        border: 1px solid var(--border);
    }

    .item .col {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        height: 100%;
    }

    .item .title {
        font-weight: 700;
        font-size: 16px;
        margin-bottom: 6px;
        color: var(--fg-body);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .item .description {
        font-size: 14px;
        color: var(--fg-muted);
        margin: 0;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.5;
    }

    .hidden {
        display: none !important;
    }

    /* Section Headers */
    .apps-header {
        font-size: 24px;
        font-weight: 800;
        margin: 0 0 20px 0;
        color: var(--fg-body);
        letter-spacing: -0.02em;
    }
</style>
</head>

<body>
    <div class="container">
        <main>
            <div class="grid">
                <!-- Removed Aside -->
                <div class='sections'>
                    <h2 class="apps-header"><i class="fas fa-desktop"></i> Apps</h2>
                    <input type="search" id="searchInput" class="input"
                        placeholder="Search scripts from verified publishers">

                    <nav class="tab">
                        <button id="verifiedTab" class="selected" onclick="selectTab('verified')">
                            <i class="fas fa-check"></i> Verified scripts
                        </button>
                        <button id="communityTab" onclick="selectTab('community')">
                            <i class="fas fa-shapes"></i> Community scripts
                        </button>
                    </nav>

                    <section id="verifiedSection" class="minimalItemsContainer">
                        <section class="minimal_items" id="featuredItems">
                            <!-- Featured items loaded here -->
                        </section>
                    </section>

                    <section id="communitySection" class="minimalItemsContainer hidden">
                        <section class="minimal_items" id="latestItems">
                            <!-- Latest items loaded here -->
                        </section>
                    </section>
                </div>
            </div>
        </main>
    </div>
    <script>
        // --- Mock Config ---
        const Config = {
            featured: "https://pinokiocomputer.github.io/sitefeed/featured.json",
        };

        var page = "app";
        var currentTab = "verified";
        var allFeaturedItems = [];
        var filteredFeaturedItems = [];
        var allLatestItems = [];
        var filteredLatestItems = [];

        // --- Embedded JS Logic ---
        function selectTab(tab) {
            currentTab = tab;
            document.getElementById('verifiedTab').classList.toggle('selected', tab === 'verified');
            document.getElementById('communityTab').classList.toggle('selected', tab === 'community');

            if (tab === 'verified') {
                document.getElementById('verifiedSection').classList.remove('hidden');
                document.getElementById('communitySection').classList.add('hidden');
            } else {
                document.getElementById('verifiedSection').classList.add('hidden');
                document.getElementById('communitySection').classList.remove('hidden');
            }
            searchItems();
        }

        function searchItems() {
            const searchValue = document.getElementById('searchInput').value.trim().toLowerCase();
            const container = document.getElementById(currentTab === "verified" ? "featuredItems" : "latestItems");
            let items = currentTab === "verified" ? allFeaturedItems : allLatestItems;

            if (searchValue) {
                items = items.filter(item =>
                    item.title.toLowerCase().includes(searchValue) ||
                    item.description.toLowerCase().includes(searchValue)
                );
            }

            renderItems(items, container, currentTab === "verified" ? 'featured' : 'latest');
        }

        function renderItems(items, container, type) {
            container.innerHTML = '';
            items.forEach(item => {
                const link = document.createElement('a');
                const theme = new URLSearchParams(window.location.search).get("theme");

                // Native fix: Point to local item page
                let href = `/item_native?uri=${encodeURIComponent(item.download)}`;
                if (theme) href += `&theme=${theme}`;

                link.href = href;
                link.className = 'card';

                link.innerHTML = `
                <div class="item">
                    <div class="col">
                        <div class="title">${item.title}</div>
                        <div class="description">${item.description}</div>
                    </div>
                    ${item.image ? `<img src="${item.image}" width="80" height="80" alt="${item.title}">` : ''}
                </div>
            `;
                container.appendChild(link);
            });
        }

        async function fetchFeatured() {
            try {
                const res = await fetch(Config.featured);
                const data = await res.json();
                allFeaturedItems = data;
                renderItems(allFeaturedItems, document.getElementById('featuredItems'), 'featured');
            } catch (e) { console.error(e); }
        }

        async function fetchLatest() {
            try {
                const res = await fetch("https://api.github.com/search/repositories?q=topic:pinokio&sort=updated&direction=desc&per_page=100");
                const data = await res.json();
                allLatestItems = data.items.map(item => ({
                    title: item.name,
                    description: item.description || "",
                    image: item.owner.avatar_url,
                    download: item.html_url
                }));
                renderItems(allLatestItems, document.getElementById('latestItems'), 'latest');
            } catch (e) { console.error(e); }
        }

        document.addEventListener("DOMContentLoaded", () => {
            const theme = new URLSearchParams(window.location.search).get("theme");
            if (theme) document.body.classList.add(theme);

            fetchFeatured();
            fetchLatest();

            document.getElementById('searchInput').addEventListener('input', searchItems);
        });
    </script>
</body>

</html>