{
  "steps": [
    {
      "step": "1/4",
      "description": "Checking GPU availability",
      "type": "shell",
      "command": "python3 -c \"import cv2; print(f'OpenCV: {cv2.__version__}')\" 2>&1 || echo 'OpenCV not available in base Python'"
    },
    {
      "step": "2/4",
      "description": "Activating virtual environment",
      "type": "shell",
      "command": "cd {{$home}} && source .venv/bin/activate && echo 'Environment activated'"
    },
    {
      "step": "3/4",
      "description": "Starting Flask server",
      "type": "daemon",
      "command": "cd {{$home}} && source .venv/bin/activate && python3 app.py",
      "wait": "seconds:5"
    },
    {
      "step": "4/4",
      "description": "Server started successfully",
      "type": "shell",
      "command": "echo 'âœ… Face Detector running at http://localhost:5000' && sleep 1"
    }
  ]
}
